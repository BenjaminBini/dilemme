body
	padding-top 61px
	overflow-x hidden
	
a[role="button"]
	cursor pointer
	
footer
	padding-left 0 15px
	background none
	margin-top 40px
	p
		border-top 1px solid #d7e0e2

// Navbar	
.navbar-form
	.form-group
		margin-left 10px
	button
		margin-left 10px
	.register
		margin-top -8px
		cursor pointer
.navbar-collapse .navbar-nav.navbar-right:last-child>.dropdown:last-child>a
	border-radius 0

// Notifications
.toast-top-right
	top 70px
	
	
// Filters buttons
.filters
	margin 10px 0
	.form-group
		float none
	.form-control
		width 100%
	.select
		cursor pointer
	
// Action buttons
.actions
	a, button
		margin-right 20px
	.pull-right a,
	.pull-right button
		margin-right 0
		margin-left 20px

// Dropdowns
.select2-drop .select2-result-single li:first-child .select2-result-label
	border-top-left-radius 4px
	border-top-right-radius 4px

.select2-drop .select2-result-single li:last-child .select2-result-label
	border-bottom-left-radius 4px
	border-bottom-right-radius 4px

// Modals
.ngdialog.ngdialog-theme-default .ngdialog-content
	background rgba(255,255,255,.9)
	padding 1.8em 2em
	width 440px
	-webkit-border-radius 0
	border-radius 0
	.modal-title
		margin-top 0
	.register
		margin-top 20px
		label
			padding-left 0
			padding-right 0

// Question view
.question
	.question-text
		text-align center
		margin-bottom 40px
	.answers
		.answer, .separation
			text-align center
			color white
			font-size 2em
			padding 0
		.answer 
			cursor pointer
			span.answer-text,
			.circle
				display block
				user-select none
				-webkit-user-select none
				-moz-user-select none
				position relative
				overflow hidden
				padding 20px
				padding 150px 20px
				border-bottom 12px solid rgba(0, 0, 0, .15)
			.circle
				display	block
				position absolute
				background rgba(0,0,0,.075)
				border-radius 50%
				transform scale(0)
				-ms-transform scale(0)
				-wekbit-transform scale(0)
				border-bottom none
				&.animate
					-webkit-animation effect 0.85s linear
					animation effect 0.85s linear
			.result
				height 0
				overflow hidden
				.percentage,
				.votes
					margin-left 20px
		.separation
			font-size 90px
			padding 88px 20px
			color inherit
		answer-button:first-child .answer
			background #e74c3c
		answer-button:last-child .answer
			background #3498db
	.answers.answered
		.answer
			cursor auto
		.result
			height: 60px	
			transition height 0.65s ease-in-out
			transition-delay: 0.3s
	.actions
		margin-top 40px
		margin-bottom 40px
	.question-details
		.question-detail-field
			margin-bottom 10px
		.icon
			margin-right 10px
		.votes a
			cursor pointer
		.tags
			.tag
				display inline-block
				height 27px
				padding 6px 21px
				margin 0 5px 5px 0
				overflow hidden
				font-size 13px
				line-height 15px  
				color #fff;
				background-color #1abc9c;
				vertical-align middle
				border-radius 4px
				font-weight 700
			a
				color white
	.comments
		textarea
			height 100px
			margin-bottom 20px
			border-radius 3px
			font-size 16px
			border-color #ddd
		.comment
			.panel-title
				color white
				&.red
					background-color #e74c3c
				&.blue
					background-color #3498db
			.delete-comment
				cursor pointer
			.date
				position absolute
				right 5px
				bottom 20px
				font-size 14px
				color #777
	
		
// View transition animation
@keyframes effect
	100%
		opacity 0
		transform scale(3)
		-ms-transform scale(3)
		-wekbit-transform scale(3)
.view-transition
	.view
		transition 800ms
		position relative
		&.ng-enter
			opacity 0
		&.ng-enter-active
			opacity 1
		&.ng-leave
			display none

.no-transition
.no-transition *
	-moz-transition none !important
	-webkit-transition none !important
	-o-transition color 0 ease-in !important
	transition none !important