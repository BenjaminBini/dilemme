body
	padding-top 61px

footer
	padding-left 0 15px
	background none
	margin-top: 40px
	p
		border-top: 1px solid #d7e0e2
	
// Navbar	
.navbar-form
	.form-group
		margin-left 10px
	button
		margin-left 10px
	.sign-up
		margin-top: -8px
.navbar-collapse .navbar-nav.navbar-right:last-child>.dropdown:last-child>a
	border-radius: 0

// Notifications
.toast-top-right
	top 70px
	
	
// Filters buttons
.filters
	margin: 10px 0
	.form-group
		float: none
	.form-control
		width: 100%
	.select
		cursor: pointer
	
// Action buttons
.actions
	a, button
		margin-right 20px
	.pull-right a, button
		margin-right 0
		margin-left 20px

// Dropdowns
.select2-drop .select2-result-single li:first-child .select2-result-label
	border-top-left-radius: 4px
	border-top-right-radius: 4px

.select2-drop .select2-result-single li:last-child .select2-result-label
	border-bottom-left-radius: 4px
	border-bottom-right-radius: 4px
