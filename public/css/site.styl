@font-face
	font-family 'CC-ICONS'
	font-style normal
	font-weight normal
	src url('/fonts/cc-icons.ttf') format('truetype')

body
	padding-top 61px
	padding-bottom 60px
	overflow-x hidden
	
[role="button"]
	cursor pointer

// No radius on some stuff
input,
button,
.btn,
.select2-choice,
.ui-select-dropdown, 
.select2-result-label,
.dropdown-menu,
.well
a {
	border-radius 0 !important
}

// Same for shadows
.well {
	box-shadow: none;
}

footer
	background #34495e
	color white
	margin-top 40px
	position fixed
	bottom 0
	left 0
	width 100%
	height 40px
	p
		padding 10px
	a 
		color white
	span.cc
		font-family 'CC-ICONS'
		font-size 24px
		font-weight normal
	span.footer-text
		vertical-align top
		padding 0 10px
		font-weight bold
	.github
		font-size 20px
		vertical-align top

// Navbar	
.navbar-nav > li > a {
	font-weight normal
}
.navbar-form
	float right
	padding-left 0
	padding-right 10px
	padding-bottom 0
	.form-group
		margin-left 10px
	.register
		margin-top -8px
		cursor pointer
	.form-control
		width 150px
		background-color white !important
		display inline
		border-radius 0
	button.btn
		border-radius 0 !important
	.select2-choice
		line-height 1
		padding: 9px 39px 6px 15px
.navbar-collapse .navbar-nav.navbar-right:last-child>.dropdown:last-child>a
	border-radius 0
.navbar-inverse .navbar-nav>.dropdown>a .caret
	border-top-color white
.language-switcher
	display inline-block
	.dropdown-menu
		padding 0 !important
		overflow hidden
	.languages img
		margin-right 5px
	.languages a
		border-radius 0 !important
// Notifications
.toast-top-right
	top 70px
#toast-container > div
	border-radius 0
	box-shadow none
#toast-container > :hover
	box-shadow none
	
	
// Filters buttons
.filters
	margin 10px 0
	.form-group
		float none
	.form-control
		width 100%
	.select
		cursor pointer
	
// Action buttons
.actions
	a, button
		margin-right 20px
		padding-bottom 14px
		box-shadow inset 0 -4px 0 rgba(0,0,0,.15)
	.pull-right a,
	.pull-right button
		margin-right 0
		margin-left 20px
		border-radius 0

// Tags input
.bootstrap-tagsinput
	margin-bottom 0
	border-radius 0
.bootstrap-tagsinput .tag
	border-radius 0
// Dropdowns
.ui-select-dropdown
	border none !important
.select2-drop .select2-result-single li:first-child .select2-result-label
	border-top-left-radius 4px
	border-top-right-radius 4px

.select2-drop .select2-result-single li:last-child .select2-result-label
	border-bottom-left-radius 4px
	border-bottom-right-radius 4px

// Modals
.ngdialog.ngdialog-theme-default .ngdialog-content
	background rgba(255,255,255,.9)
	padding 1.8em 2em
	width 500px
	-webkit-border-radius 0
	border-radius 0
	.modal-title
		margin-top 0
	.register
		margin-top 20px
		label
			padding-left 0
			padding-right 0
.ngdialog.ngdialog-theme-default.ngdialog-large .ngdialog-content
	width 650px

// Question view
.question
	.question-text
		text-align center
		margin-bottom 40px
	.answers
		.answer, .separation
			text-align center
			color white
			font-size 2em
			padding 0
		.answer 
			cursor pointer
			border-bottom 12px solid rgba(0, 0, 0, .15)
			height 400px
			overflow hidden
			.answer-text
				display block
				user-select none
				-webkit-user-select none
				-moz-user-select none
				position relative
				padding 20px
				top 35%
			.circle
				display	block
				position absolute
				background rgba(0,0,0,.075)
				border-radius 50%
				transform scale(0)
				-ms-transform scale(0)
				-wekbit-transform scale(0)
				border-bottom none
				height 400px
				width 400px
				overflow hidden
				&.animate
					-webkit-animation effect 0.85s linear
					animation effect 0.85s linear
			.result
				opacity 0
				overflow hidden
				font-size 5rem
				.percentage
					margin-left 20px
				.votes
					opacity 0
					font-size 2.2rem
					font-weight lighter
		.separation
			font-size 90px
			line-height 400px			
			color inherit
		answer-button:first-child .answer
			background #e74c3c
		answer-button:last-child .answer
			background #3498db
	.answered.answered
		&.answer
			cursor auto
		.answer-text
			top 20%
			transition top 1s 1s ease-in-out
		.result
			opacity 1	
			transition opacity 0.65s ease-in-out
			.odometer
				vertical-align baseline !important
			.votes
				opacity 1
				transition-delay 2s !important
				transition opacity 0.65s ease-in-out
			.glyphicon-ok:before
				display inline-block
				width 55px
	.actions
		margin-top 40px
		margin-bottom 40px
	.question-details
		border-radius 0
		.panel-heading
			border-radius 0
		.question-detail-field
			margin-bottom 10px
		.icon
			margin-right 10px
		.votes a
			cursor pointer
		.tags
			.tag
				display inline-block
				height 27px
				padding 6px 21px
				margin 0 5px 5px 0
				overflow hidden
				font-size 13px
				line-height 15px  
				color #fff;
				background-color #1abc9c;
				vertical-align middle
				font-weight 700
			a
				color white
		.share-buttons 
			padding-left 0
			display inline-block
			li
				list-style none
				display inline-block
				margin-right 10px
	.comments
		textarea
			height 100px
			margin-bottom 20px
			font-size 16px
			border-color #ddd
		.comment
			border-radius 0
			.panel-heading
				padding-top 5px
				padding-right 5px
				border-radius 0
				&.red
					background-color #e74c3c
					color white
				&.blue
					background-color #3498db
					color white
				a
					margin-left 5px
				.comment-upvotes
					padding 5px
			.panel-body
				position relative
			.delete-comment
				cursor pointer
			.date
				position absolute
				right 5px
				bottom 0
				font-size 14px
				color #777

// Stats page
.stats
	.description
		height 7.5rem

// Pagination
.pagination
	width 100%
	text-align center
	ul
		border-radius 0
	li
		margin-right 0
	.next > a,
	.previous > a,
	li:last-child > a:hover,
	li:first-child > a:hover
		border-radius 0 !important
		
// Global color classes
.red-background
	background-color #e74c3c
	color white
.blue-background
	background-color #3498db
	color white
span.red
	color #e74c3c
span.blue
	color #3498db
		
// View transition animation
@keyframes effect
	100%
		opacity 0
		transform scale(3)
		-ms-transform scale(3)
		-wekbit-transform scale(3)
.view-transition
	.view
		transition 800ms
		position relative
		&.ng-enter
			opacity 0
		&.ng-enter-active
			opacity 1
		&.ng-leave
			display none

.no-transition
.no-transition *
	-moz-transition none !important
	-webkit-transition none !important
	-o-transition color 0 ease-in !important
	transition none !important

// Odometer animation duration
.odometer.odometer-animating-up, .odometer.odometer-animating-down.odometer-animating .odometer-ribbon-inner
	-webkit-transition-duration 3s !important
	-moz-transition-duration 3s !important
	-ms-transition-duration 3s !important
	-o-transition-duration 3s !important
	transition-duration 3s !important
