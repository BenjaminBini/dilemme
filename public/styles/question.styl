// Question view
.question
	.question-text
		text-align center
		margin-bottom 40px
	.answers
		.answer, .separation
			text-align center
			color white
			font-size 2em
			padding 0
		.answer 
			cursor pointer
			border-bottom 12px solid rgba(0, 0, 0, .15)
			height 400px
			overflow hidden
			box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
			.answer-text
				display block
				user-select none
				-webkit-user-select none
				-moz-user-select none
				position relative
				padding 20px
				top 35%
			.circle
				display	block
				position absolute
				background rgba(0,0,0,.075)
				border-radius 50%
				transform scale(0)
				-ms-transform scale(0)
				-wekbit-transform scale(0)
				border-bottom none
				height 400px
				width 400px
				overflow hidden
				&.animate
					-webkit-animation effect 0.85s linear
					animation effect 0.85s linear
			.result
				opacity 0
				overflow hidden
				font-size 5rem
				.percentage
					margin-left 20px
				.votes
					opacity 0
					font-size 2.2rem
					font-weight lighter
		.separation
			font-size 90px
			line-height 400px			
			color inherit
		answer-button:first-child .answer
			background #e74c3c
		answer-button:last-child .answer
			background #3498db
	.answered.answered
		&.answer
			cursor auto
		.answer-text
			top 20%
			transition top 1s 1s ease-in-out
		.result
			opacity 1	
			transition opacity 0.65s ease-in-out
			.odometer
				vertical-align baseline !important
			.votes
				opacity 1
				transition-delay 2s !important
				transition opacity 0.65s ease-in-out
			.glyphicon-ok:before
				display inline-block
				width 55px
	.actions
		margin-top 40px
		margin-bottom 40px
	.question-details
		border-radius 0
		border 1px solid #1abc9c
		.panel-heading
			border-radius 0
			border none
			background-color #1abc9c
			h2 
				font-size 15px
				color white
		.question-detail-field
			margin-bottom 10px
		.icon
			margin-right 10px
		.votes a
			cursor pointer
		.tags
			.tag
				display inline-block
				height 27px
				padding 6px 21px
				margin 0 5px 5px 0
				overflow hidden
				font-size 13px
				line-height 15px  
				color #fff;
				background-color #1abc9c;
				vertical-align middle
				font-weight 700
			a
				color white
		.share-buttons 
			padding-left 0
			display inline-block
			li
				list-style none
				display inline-block
				margin-right 10px
	.comments
		textarea
			height 100px
			margin-bottom 20px
			font-size 16px
			border-color #ddd
		.comment
			border-radius 0
			.panel-heading
				padding-top 5px
				padding-right 5px
				border-radius 0
				&.red
					background-color #e74c3c
					color white
				&.blue
					background-color #3498db
					color white
				a
					margin-left 5px
				.comment-upvotes
					padding 5px
			.panel-body
				position relative
			.delete-comment
				cursor pointer
			.date
				position absolute
				right 5px
				bottom 0
				font-size 14px
				color #777

// Circle effect
@keyframes effect
	100%
		opacity 0
		transform scale(3)
		-ms-transform scale(3)
		-wekbit-transform scale(3)

// Stats page
.stats .description
		height 7.5rem
		
// Odometer animation duration
.odometer.odometer-animating-up, .odometer.odometer-animating-down.odometer-animating .odometer-ribbon-inner
	-webkit-transition-duration 3s !important
	-moz-transition-duration 3s !important
	-ms-transition-duration 3s !important
	-o-transition-duration 3s !important
	transition-duration 3s !important