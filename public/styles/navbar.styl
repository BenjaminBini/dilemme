// Navbar	
.dilemme
	.navbar-header
		position relative
	.navbar-nav > li > a
		font-weight normal
	.navbar-form
		float right
		padding-left 0
		padding-right 0
		padding-bottom 0
		input.password
			width 111px
		.form-group
			margin-left 10px
		.register,
		.forgot-pwd
			margin-top -9px
			cursor pointer
		.forgot-pwd
			max-width 80px
			font-size 11px
			line-height 15px
			text-align center
			padding 11px 0
		.connect-with-text
			color white
			padding 4px
			padding-right 8px
		.connect-with a
			padding 0
		.form-control
			width 150px
			background-color white !important
			display inline
			border-radius 0
		button.btn
			border-radius 0 !important
			box-shadow none
			margin-left 10px !important
		.select2-choice
			line-height 1
			padding: 9px 39px 6px 15px
	.navbar-collapse .navbar-nav.navbar-right:last-child>.dropdown:last-child>a
		border-radius 0
	.navbar-inverse .navbar-nav>.dropdown>a .caret
		border-top-color white
	.language-switcher
		display inline-block
		.dropdown-toggle
			padding 15px 10px
		.dropdown-menu
			padding 0 !important
			overflow hidden
		.languages img
			margin-right 5px
		.languages a
			border-radius 0 !important
	.navbar-inverse a:hover,
	.navbar-inverse a:hover .caret 
	.navbar-inverse a:focus,
	.navbar-inverse a:focus .caret
		color white !important
		opacity 0.8
		border-top-color white !important
		border-bottom-color white !important