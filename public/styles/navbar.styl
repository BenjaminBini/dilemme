// Navbar	
.navbar-header
	position relative
.navbar-nav > li > a
	font-weight normal
.navbar-form
	float right
	padding-left 0
	padding-right 0
	padding-bottom 0
	input.password
		width 111px
	.form-group
		margin-left 10px
	.register,
	.forgot-pwd
		margin-top -8px
		cursor pointer
	.forgot-pwd
		max-width 80px
		font-size 11px
		line-height 15px
		text-align center
		padding 11px 0
	.form-control
		width 150px
		background-color white !important
		display inline
		border-radius 0
	button.btn
		border-radius 0 !important
		box-shadow none
		margin-left 10px !important
	.select2-choice
		line-height 1
		padding: 9px 39px 6px 15px
.navbar-collapse .navbar-nav.navbar-right:last-child>.dropdown:last-child>a
	border-radius 0
.navbar-inverse .navbar-nav>.dropdown>a .caret
	border-top-color white
.language-switcher
	display inline-block
	.dropdown-menu
		padding 0 !important
		overflow hidden
	.languages img
		margin-right 5px
	.languages a
		border-radius 0 !important