h4.modal-title {{'REGISTER' | translate}}
form.register.form-horizontal(name="registerForm")
	.form-group
		label.col-md-3.control-label(for="username") {{'USERNAME' | translate}}
		.col-md-9
			input.form-control(name="username", type="text", placeholder="{{'USERNAME' | translate}}", ng-model="username", required)
	.form-group
		label.col-md-3.control-label(for="email") {{'EMAIL' | translate}}
		.col-md-9
			input.form-control(name="email", type="email", placeholder="{{'EMAIL' | translate}}", ng-model="email", required)
			p.help-block {{'WILL_REMAIN_PRIVATE' | translate}}
	.form-group
		label.col-md-3.control-label(for="password") {{'PASSWORD' | translate}}
		.col-md-9
			input.form-control(name="password", type="password", placeholder="{{'PASSWORD' | translate}}", ng-model="password", required)
	.form-group
		.actions.col-md-10.col-md-offset-2
			.pull-right
				button.btn.btn-primary(ng-click="registerFromModal()", ng-disabled="registerForm.$invalid") {{'SUBMIT' | translate}}
				button.btn.btn-default(ng-click="closeThisDialog('cancel')") {{'CANCEL' | translate}}
	.form-group
		label.col-md-3.control-label {{'OR_USE' | translate}}
		.col-md-9
			a.connect-with(href="/auth/facebook", target="_self")
				span.socicon-connect.socicon-facebook
			a.connect-with(href="/", target="_self")
				span.socicon-connect.socicon-twitter