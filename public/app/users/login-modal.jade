h4.modal-title {{'SIGN_IN' | translate}}
form.register.form-horizontal(name="signinForm")
	.form-group
		label.col-md-3.control-label(for="email") {{'EMAIL' | translate}}
		.col-md-9
			input.form-control(placeholder="{{'EMAIL' | translate}}", ng-model="username" autofocus)
	.form-group
		label.col-md-3.control-label(for="password") {{'PASSWORD' | translate}}
		.col-md-9
			input.form-control(type="password", placeholder="{{'PASSWORD' | translate}}", ng-model="password")
	.form-group
		.actions.col-md-10.col-md-offset-2
			.pull-right
				button.btn.btn-primary(ng-click="signin(username, password)") {{'SIGN_IN' | translate}}
				button.btn.btn-default(ng-click="closeThisDialog('cancel')") {{'CANCEL' | translate}}