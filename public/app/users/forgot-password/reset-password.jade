.container.well
	form.form-horizontal(name="forgotForm", ng-if="!vm.mailSent")
		fieldset
			legend {{'FORGOT_MY_PASSWORD' | translate}}
			.form-group
				label.col-md-2.control-label(for="password") {{'USERNAME_OR_EMAIL' | translate}}
				.col-md-10
					input.form-control(name="password", id="password", type="text", placeholder="{{'USERNAME_OR_EMAIL' | translate}}", ng-model="vm.newPassword", required)
			.form-group
				.col-md-10.col-md-offset-2
					.pull-right
						button.btn.btn-primary(ng-click="vm.resetPassword(vm.newPassword)", ng-disabled="forgotForm.$invalid") {{'SUBMIT' | translate}}
						| &nbsp;
						a.btn.btn-default(href="/") {{'CANCEL' | translate}}