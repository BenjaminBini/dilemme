.container
	h3 {{'MOST_UPVOTED_QUESTIONS' | translate}}
	h3(ng-show="questions.length === 0") {{'NO_QUESTION_YET' | translate}}
	table.table.table-hover(ng-show="questions.length > 0")
		thead
			tr
				th {{'QUESTION' | translate}}
				th {{'UPVOTES' | translate}}
				th {{'PUBLICATION_DATE' | translate}}
		tbody
			tr(dir-paginate="question in questions | orderBy: '-upvotes' | itemsPerPage: 10")
				td
					a(href="/questions/{{question._id}}") {{question.text}} : {{question.answers[0].text}} or {{question.answers[1].text}} ?
				td {{question.upvotes}}
				td {{question.published | date }}
	dir-pagination-controls