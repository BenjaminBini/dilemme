.container
	h3 Most answered questions
	h3(ng-show="questions.length === 0") No question yet
	table.table.table-hover(ng-show="questions.length > 0")
		thead
			tr
				th Question
				th Answers
				th Publish Date
		tbody
			tr(dir-paginate="question in questions | orderBy: '- (answers[0].votes + answers[1].votes)' | itemsPerPage: 10")
				td
					a(href="/questions/{{question._id}}") {{question.text}} : {{question.answers[0].text}} or {{question.answers[1].text}} ?
				td {{question.answers[0].votes + question.answers[1].votes}}
				td {{question.published | date}}
	dir-pagination-controls