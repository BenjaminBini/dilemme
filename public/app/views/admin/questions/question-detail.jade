.container.well
	form.form-horizontal(name="questionForm")
		fieldset
			legend Question
			.form-group
				label.col-md-2.control-label(for="text") Title
				.col-md-10
					input.form-control(name="text", type="text", placeholder="Title", ng-model="question.title", autofocus)
			.form-group
				label.col-md-2.control-label(for="text") Description
				.col-md-10
					input.form-control(name="text", type="text", placeholder="Description", ng-model="question.description", autofocus)
			.form-group
				label.col-md-2.control-label(for="text") Text
				.col-md-10
					input.form-control(name="text", type="text", placeholder="Text", ng-model="question.text", required, autofocus)
			.form-group
				label.col-md-2.control-label(for="answer1") First choice
				.col-md-10
					input.form-control(name="answer1", type="text", placeholder="First choice", ng-model="question.answers[0].text", required)
			.form-group
				label.col-md-2.control-label(for="answer2") Second choice
				.col-md-10
					input.form-control(name="answer2", type="text", placeholder="Second choice", ng-model="question.answers[1].text", required)
			.form-group
				label.col-md-2.control-label(for="tags") Tags
				.col-md-10
					tags-input(tags="question.tags", is-loaded="isLoaded")
			.form-group(ng-show="!!question.author")
				label.col-md-2.control-label(for="tags") Author
				.col-md-10
					label.control-label
						a(href="/admin/users/{{question.author._id}}") {{question.author.username}}
			.form-group.actions
				.col-md-10.col-md-offset-2
					a.btn.btn-default(ng-href="/admin/questions") Back
					a.btn.btn-info(ng-show="!!question._id" ng-href="/questions/{{question._id}}") View in context
					.pull-right
						button.btn.btn-primary(ng-click="save()", ng-disabled="questionForm.$invalid") Submit
						button.btn.btn-danger(ng-click="delete()" ng-show="editionMode") Delete

			