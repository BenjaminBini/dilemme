.container.well
	form.form-horizontal(name="suggestionForm")
		fieldset
			legend {{'SUGGESTION' | translate}}
			.form-group
				label.col-md-2.control-label(for="text") {{'TITLE' | translate}}
				.col-md-10
					input.form-control(name="text", type="text", placeholder="{{'TITLE' | translate}}", ng-model="suggestion.title", autofocus)
			.form-group
				label.col-md-2.control-label(for="text") {{'DESCRIPTION' | translate}}
				.col-md-10
					input.form-control(name="text", type="text", placeholder="{{'DESCRIPTION' | translate}}", ng-model="suggestion.description", autofocus)
			.form-group
				label.col-md-2.control-label(for="text") {{'TEXT' | translate}}
				.col-md-10
					input.form-control(name="text", type="text", placeholder="{{'TEXT' | translate}}", ng-model="suggestion.text", required, autofocus)
			.form-group
				label.col-md-2.control-label(for="answer1") {{'FIRST_CHOICE' | translate}}
				.col-md-10
					input.form-control(name="answer1", type="text", placeholder="{{'FIRST_CHOICE' | translate}}", ng-model="suggestion.answers[0].text", required)
			.form-group
				label.col-md-2.control-label(for="answer2") {{'SECOND_CHOICE' | translate}}
				.col-md-10
					input.form-control(name="answer2", type="text", placeholder="{{'SECOND_CHOICE' | translate}}", ng-model="suggestion.answers[1].text", required)
			.form-group
				label.col-md-2.control-label(for="tags") {{'TAGS' | translate}}
				.col-md-10
					tags-input(tags="suggestion.tags", is-loaded="isLoaded")
			.form-group(ng-show="!!suggestion.author")
				label.col-md-2.control-label(for="tags") {{'AUTHOR' | translate}}
				.col-md-10
					label.control-label
						a(href="/admin/users/{{suggestion.author._id}}") {{suggestion.author.username}}
			.form-group.actions
				.col-md-10.col-md-offset-2
					a.btn.btn-default(ng-href="/admin/suggestions") {{'BACK_TO_SUGGESTIONS_LIST' | translate}}
					.pull-right
						button.btn.btn-primary(ng-click="validate()", ng-disabled="suggestionForm.$invalid") {{'VALIDATE' | translate}}
						button.btn.btn-danger(ng-click="delete()") {{'DELETE' | translate}}

			